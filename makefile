########################################################################
##							   PREFIXES								   ##
#########################################################################

CC 			=		$(PREFIX)gcc
AR			=		$(PREFIX)ar
WARNINGS	=		-std=c99 -Wall -Wextra -Wparentheses -Werror -pedantic

#########################################################################
##							 FILE ACCESS							   ##
#########################################################################

SRC_FILE	=		common.c
OBJ_FILE	=		common.o

#########################################################################
##							 TARGET LINKING							   ##
#########################################################################

TARGET 		=		hazzaCommon.so

all: $(TARGET)

$(TARGET): $(OBJ_FILE)
	$(CC) -shared -o $@ $^

$(OBJ_FILE): $(SRC_FILE)
	$(CC) $(WARNINGS) -c $< -o $@

#########################################################################
##							 	CLEANUP							       ##
#########################################################################

clean:
	rm -f $(OBJ_FILE) $(TARGET)

.PHONY: clean